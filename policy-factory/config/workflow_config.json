{
  "workflowStages": [
    {
      "id": "draft",
      "name": "Draft",
      "order": 1,
      "color": "slate",
      "description": "Document is being drafted by the author",
      "allowedActions": ["submitForReview", "delete", "edit"],
      "nextStages": ["review"]
    },
    {
      "id": "review",
      "name": "Under Review",
      "order": 2,
      "color": "blue",
      "description": "Document is being reviewed by department head or subject matter expert",
      "allowedActions": ["approve", "reject", "requestChanges"],
      "nextStages": ["approval", "draft"],
      "requiredRole": "reviewer"
    },
    {
      "id": "approval",
      "name": "Pending Approval",
      "order": 3,
      "color": "orange",
      "description": "Document is pending approval from BOD or Executive Committee",
      "allowedActions": ["approve", "reject", "requestChanges"],
      "nextStages": ["published", "review"],
      "requiredRole": "approver"
    },
    {
      "id": "published",
      "name": "Published",
      "order": 4,
      "color": "green",
      "description": "Document is approved and published",
      "allowedActions": ["archive", "revise"],
      "nextStages": ["draft"]
    },
    {
      "id": "archived",
      "name": "Archived",
      "order": 5,
      "color": "gray",
      "description": "Document has been archived or superseded",
      "allowedActions": ["restore"],
      "nextStages": ["draft"]
    }
  ],
  "roles": [
    {
      "id": "author",
      "name": "Author",
      "permissions": ["create", "edit", "submitForReview", "delete"],
      "description": "Can create and edit draft documents"
    },
    {
      "id": "reviewer",
      "name": "Reviewer",
      "permissions": ["review", "approve", "reject", "requestChanges"],
      "description": "Department heads and SMEs who review documents",
      "departments": ["IT", "HR", "OPS", "COM", "RISK", "AUDIT", "FIN", "ADMIN"]
    },
    {
      "id": "approver",
      "name": "Approver",
      "permissions": ["approve", "reject", "requestChanges", "publish"],
      "description": "BOD and Executive Committee members",
      "committees": ["Board of Directors", "Executive Committee", "Audit Committee", "Risk Committee"]
    },
    {
      "id": "admin",
      "name": "Administrator",
      "permissions": ["all"],
      "description": "System administrators with full access"
    }
  ],
