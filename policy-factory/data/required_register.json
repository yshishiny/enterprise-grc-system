    "description": "Defines what 'complete' means — every required policy, procedure, and evidence by domain. Used to compute Coverage%, Approval%, Mapping%, Evidence% automatically.",
    "scoringFormulas": {
      "coveragePct": "(# required docs present) / (total required docs) × 100",
      "approvalPct": "(# required docs with status=Approved) / (total required docs) × 100",
      "mappingPct": "(# required docs mapped to ≥1 control) / (total required docs) × 100",
      "evidenceReadinessPct": "(# controls with required evidence uploaded) / (total controls) × 100"
    }
